@page "/createcomic"
@page "/createcomic/{id:int}"
@inject IComicService ComicService
@inject NavigationManager NavigationManager

@if (Id == null)
{
   <PageTitle>Create a new Comic</PageTitle>
   <h3>Create a new Comic</h3>
}
else
{
   <PageTitle>Edit @comic.Name</PageTitle>
   <h3>Edit @comic.Name</h3>
}

<EditForm Model="comic" OnSubmit="HandleSubmit">
   <div>
      <label for="name">Name</label>
      <InputText id="name" @bind-Value="comic.Name" class="form-control"></InputText>
      <ValidationMessage For="@(() => comic.Name)" />
   </div>

   <br />

   <button type="submit" class="btn btn-primary">@btnText</button>

   @if (Id != null)
   {
      <button type="button" class="btn btn-danger mx-2" @onclick="DeleteComic">Delete Comic</button>
   }
   else
   {
      <button type="button" class="btn btn-danger mx-2" @onclick="GoToComicsPage">Back</button>
   }
</EditForm>

@code {
   [Parameter]
   public int? Id { get; set; }

   string btnText = string.Empty;

   Comic comic = new Comic { };

   protected override async Task OnInitializedAsync()
   {
      btnText = Id == null ? "Save New Comic" : "Update Comic";
      await ComicService.GetComics();
   }

   protected override async Task OnParametersSetAsync()
   {
      if (Id == null)
      {
         // If Id is null, it means we are creating a new comic.
         // You can choose to initialize the comic object with default values or leave it empty.
         comic = new Comic();
      }
      else
      {
         // If Id is not null, it means we are editing an existing comic.
         comic = await ComicService.GetSingleComic((int)Id);
      }
   }

   async Task HandleSubmit()
   {
      if (Id == null)
      {
         await ComicService.CreateComic(comic);
      }
      else
      {
         await ComicService.UpdateComic(comic);
      }
   }

   async Task DeleteComic()
   {
      await ComicService.DeleteComic(comic.Id);
   }

   private void GoToComicsPage()
   {
      NavigationManager.NavigateTo("/Comics");
   }

}
